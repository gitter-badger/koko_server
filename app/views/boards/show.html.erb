<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @board.title %>
</p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% @board.posts.reverse.each do |post| %>
      <tr>
        <td><%= post.created_at %></td>
        <td><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %>
